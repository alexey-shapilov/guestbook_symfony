{% extends 'base.html.twig' %}

{% block title %}
    Гостевая книга
{% endblock %}

{% block body %}
    {% for message in messages %}
        <div class="author">Автор: <span>{{ message.author }}</span></div>
        <div class="date-time">Дата: <span>{{ message.createAt|date("d/m/Y") }}</span></div>
        <div class="message">
            <div>Сообщение:</div>
            <div class="text">
                {{ message.text|bbcode_filter('my_default_filter') }}
            </div>
        </div>
    {% endfor %}

    <div class="form">{{ form(form) }}</div>
{% endblock %}

{% block javascripts %}
    {{ tinymce_init() }}
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
{% endblock %}